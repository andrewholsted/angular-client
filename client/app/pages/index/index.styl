@require '../../common/mixins.styl';
@require 'nib';

#index
  background-color #777
  
  // sexy text-shadow http://jsfiddle.net/NeqCC/
  h1
    font-family Arial
    text-align center
    font-size 6em
    color rgba(100, 100, 100, .8)
    text-shadow 1px 4px 6px #777, 0 0 0 #000, 1px 4px 6px #777

    &::-moz-selection 
      background #999
      color #fff 
      text-shadow none

    &::selection
      background #999
      color #f5f5f5
      text-shadow none
